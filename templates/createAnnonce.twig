{% extends "layout.twig" %}

  {% block head %}Créer votre annonce{% endblock %}
  {% block titre %}L'annonceur{% endblock %}
  {% block userName %}
    {% if prenom is defined %}
      {{prenom}}
      {{nom}}
    {% else %}
      Visiteur
    {% endif %}
  {% endblock %}
  {% block strConnection %}
    {% if prenom is defined %}
      Mon Compte
    {% else %}
    Se Connecter/ S'inscrire
    {% endif %}
  {% endblock %}

  {% block content %}

  	{############################################################   			                    #############################################################}
		{############################################################   FORMUALIRE DEPOT ANNONCE  #############################################################}
		{############################################################   			                    #############################################################}

      {############################################################    RUBRIQUE     ##########################################################################}
    <div class="container-fluid text-center">
        <hr><br>
        <form action="{{url}}?action=postAnnonce" method="post" enctype="multipart/form-data" id="uploadForm">
              <div id="group_option" class="input-group col-md-5 col-lg-4 col-xs-12 col-sm-12 ml-auto mr-auto rub_ann">
                <div class="input-group-prepend">
                  <label class="input-group-text" for="inputGroupSelect01">Rubrique</label>
                </div>
                <select class="custom-select" name="id_rubrique" id="rub_id">
                    <option selected value="0">Choissez votre catégorie</option>
                      {% for rub in rubs %}
                         <option type ="text"  id="rub_id" value ="{{rub.ID_RUBRIQUE}}">
                           {{rub.LIBELLE}}
                         </option>
                      {% endfor %}
                </select>
              </div>
              <div class="erreur_message"></div>

      {############################################################    TITRE     ##########################################################################}
              <div class="form-group">
                <label for="InputEntete">Titre de l'annonce :</label>
                <input id="titre_annonce" name="titre_annonce" type="text" class="form-control col-md-4 col-lg-4 col-xs-12 col-sm-12 ml-auto mr-auto" placeholder="Titre">
                <div class="erreur_message"></div>
              </div>

      {############################################################    DESCRIPTION     ##########################################################################}
              <div class="form-group">
                <label for="InputCorp">Description :</label>
                <textarea id="description_id"  name="description_ann" type="text" maxlength="500" class="form-control col-md-4 col-lg-4 col-xs-12 col-sm-12 ml-auto mr-auto" cols="40" rows="5" placeholder="Description de l'annonce"></textarea>
                <div class="erreur_message"></div>
              </div>

      {############################################################    DUREE     ##########################################################################}        
              <div class="input-group col-md-5 col-lg-4 col-xs-12 col-sm-12 ml-auto mr-auto rub_ann">
                <div class="input-group-prepend">
                  <label class="input-group-text" for="inputGroupSelect01">Durée</label>
                </div>
                <select class="custom-select" id="inputGroupSelect01" name="duree">
                  <option type="text"  value="40" selected>L'annonce sera en ligne pour 40 jours</option>
                  <option type="text"  value="30">L'annonce sera en ligne pour 30 jours</option>
                  <option type="text"  value="20">L'annonce sera en ligne pour 20 jours</option>
                  <option type="text"  value="10">L'annonce sera en ligne pour 10 jours</option>
                </select>
              </div>
              <hr>

      {############################################################    AJOUT PHOTOS     ##########################################################################}
              <h5> Ajouts de photo </h5>
              <div class="container">
                <div class="row">
                  <article class="col-md-4 col-lg-4 col-xs-12 col-sm-12 ">
                    <div class="col-md-12 col-lg-8 col-xs-8 col-sm-8 ml-auto imgUp">
                      <img class="imagePreview" id="imagePreview" scr="#">
                      <label class="btn btn-primary"><i class="fa fa-plus imgAdd"></i>
                        Upload<input type="file"  id="imgInp" name="file"  class="uploadFile img" value="Upload Photo" style="width: 0px;height: 0px;overflow: hidden;" multiple accept=".png, .jpg, .jpeg, .gif">
                      </label>
                    </div><!-- col-2 -->
                  </article>
                  <article class="col-md-4 col-lg-4 col-xs-12 col-sm-12 ">
                    <div class="col-md-12 col-lg-8 col-xs-8 col-sm-8 mr-auto ml-auto imgUp">
                     <img class="imagePreview" id="imagePreview_1" scr="#">
                      <label class="btn btn-primary"><i class="fa fa-plus imgAdd"></i>
                        Upload<input type="file" id="imgInp_1" name="file_1"  class="uploadFile img" value="Upload Photo" style="width: 0px;height: 0px;overflow: hidden;" multiple accept=".png, .jpg, .jpeg, .gif">
                      </label>
                    </div><!-- col-2 -->
                  </article>
                  <article class="col-md-4 col-lg-4 col-xs-12 col-sm-12 ">
                    <div class="col-md-12 col-lg-8 col-xs-8 col-sm-8 imgUp">
                      <img class="imagePreview" id="imagePreview_2" scr="#">
                      <label class="btn btn-primary"><i class="fa fa-plus imgAdd"></i>
                        Upload<input type="file" id="imgInp_2" name="file_2"  class="uploadFile img" value="Upload Photo" style="width: 0px;height: 0px;overflow: hidden;" multiple accept=".png, .jpg, .jpeg, .gif">
                      </label>
                    </div><!-- col-2 -->
                </div><!-- row -->
              </div><!-- container -->
              <hr>
      
        {############################################################    ENVOI FORMULAIRE     ##########################################################################}
              <button class="btn btn-primary ol-md-4 col-lg-4 col-xs-12 col-sm-12 ml-auto mr-auto" type="submit" id="subm_id">
              <span class="fa fa-send" style="color:#4f4;"></span> Mettre en ligne mon annonce</button>
        </form>
            <br><br>
      </div>
  {% endblock %}